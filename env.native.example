# Native App Environment Configuration
# Copy this to .env.local for native development

# Spotify API Configuration (same as web)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Native App Specific Configuration
EXPO_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
EXPO_PUBLIC_SPOTIFY_REDIRECT_URI=com.sagey.app://spotify-callback

# Alternative redirect URIs for testing
EXPO_PUBLIC_SPOTIFY_REDIRECT_URI_DEV=com.sagey.app://auth
EXPO_PUBLIC_SPOTIFY_REDIRECT_URI_WEB=https://sagey-pwa.vercel.app/api/spotify/callback

# App Configuration
EXPO_PUBLIC_APP_NAME=Sagey - Musical Age Estimator
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_BUNDLE_ID=com.sagey.app

# EAS Configuration (for builds)
EXPO_PUBLIC_EAS_PROJECT_ID=your_eas_project_id_here

# Feature Flags
EXPO_PUBLIC_ENABLE_SPOTIFY_APP_DETECTION=true
EXPO_PUBLIC_ENABLE_DEBUG_LOGGING=true
EXPO_PUBLIC_ENABLE_NATIVE_STORAGE=true

# Development Settings
NODE_ENV=development
EXPO_PUBLIC_ENV=development

# Analytics (optional)
EXPO_PUBLIC_ANALYTICS_ENABLED=false
EXPO_PUBLIC_ANALYTICS_KEY=your_analytics_key_here

# Deep Link Configuration
EXPO_PUBLIC_DEEP_LINK_SCHEME=com.sagey.app
EXPO_PUBLIC_UNIVERSAL_LINK_DOMAIN=sagey-pwa.vercel.app

# Security Settings
EXPO_PUBLIC_ENABLE_PKCE=true
EXPO_PUBLIC_SECURE_STORAGE_KEY_PREFIX=sagey_ 