# Spotify OAuth Configuration
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Redirect URI - must match exactly what's configured in Spotify app settings
# For local development:
# SPOTIFY_REDIRECT_URI=http://localhost:3000/api/spotify/callback
# For production (replace with your actual domain):
SPOTIFY_REDIRECT_URI=https://sagey-pwa.vercel.app/api/spotify/callback

# AI Insights Configuration
# OpenAI API key for generating insight copy
OPENAI_API_KEY=your_openai_api_key_here

# AI cache TTL in minutes (default: 24 hours)
AI_CACHE_TTL_MINUTES=1440

# Redis configuration for AI caching (optional, falls back to in-memory)
REDIS_URL=redis://localhost:6379

# Disable AI for development/testing (set to "true" to use mock responses)
NEXT_PUBLIC_DISABLE_AI=false

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
DISABLE_OPENCOLLECTIVE=1

# Optional: NextAuth configuration (if using NextAuth in the future)
NEXTAUTH_URL=https://sagey-pwa.vercel.app
NEXTAUTH_SECRET=your_nextauth_secret_here 